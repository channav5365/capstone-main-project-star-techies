@model POGOMVC.Models.UserRegistrationModel

@{
    ViewData["Title"] = "Create";

}

<h1>Create</h1>

<h4>UserRegistrationModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="UserRegistration" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passcode" class="control-label"></label>
                <input type="password" asp-for="Passcode" class="form-control" />
                <span asp-validation-for="Passcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Narration" class="control-label"></label>
                <input asp-for="Narration" class="form-control" />
                <span asp-validation-for="Narration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="PasscodeRecoveryQuestionnaireId1Id"></label><br />
                <select asp-items="Model.Questionnaire1" asp-for="PasscodeRecoveryQuestionnaireId1Id">
                    <option value="0">--Select Questionnaire1--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PasscodeRecoveryAnswer1" class="control-label"></label>
                <input asp-for="PasscodeRecoveryAnswer1" class="form-control" />
                <span asp-validation-for="PasscodeRecoveryAnswer1" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <select id="ddlRoles" name="Id" asp-items="@Model.Roles">
            <option value="0">--Select Role--</option>
            </select>
            </div>*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-controller="UserRegistration" asp-action="Login">Login</a>
            </div>
        </form>
    </div>
</div>
@*
<div>
    <a asp-action="Index">Back to List</a>
</div>*@
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div>
        <label asp-for="ErrorMessage" class="text-danger">@Model.ErrorMessage</label>
    </div>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
